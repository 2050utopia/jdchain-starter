<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.jd.blockchain</groupId>
    <artifactId>jdchain-starter</artifactId>
    <version>1.0-SNAPSHOT</version>

    <properties>
        <contract.version>0.5.1.RELEASE</contract.version>
        <ledger.version>0.5.1.RELEASE</ledger.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

        <sParam>${project.build.sourceDirectory}</sParam>
        <oParam>${project.build.directory}/contract/</oParam>
        <!--<cpParam>/Users/zhangliang21/IdeaProjects/prototype/contract-libs/coreLib/</cpParam>-->
        <cpParam>lib/share/</cpParam>
        <eParam>utf-8</eParam>
        <host>127.0.0.1</host>
        <port>8081</port>
        <ownerPubPath>${project.basedir}/conf/jd-com.pub</ownerPubPath>
        <ownerPrvPath>${project.basedir}/conf/jd-com.priv</ownerPrvPath>
        <ownerPassword>${project.basedir}/conf/ownerPassword.txt</ownerPassword>
        <ledgerHash>6FEQDTQMnBGANpfX4haXuWHKHw5cZ6P1h2ocqwckYBxp4</ledgerHash>
        <!--变化频繁的参数-->
        <cParam>com.jd.blockchain.contract.AssetContract3</cParam>
        <chainCodePath>${oParam}AssetContract3.contract</chainCodePath>
        <event>issue-asset</event>
        <contractArgs>10##20##5Sm9VDWAGZ8q3g8Zy2moiT29aufe5xogngPH</contractArgs>

    </properties>

    <dependencies>
        <dependency>
            <groupId>com.jd.blockchain</groupId>
            <artifactId>contract-model</artifactId>
            <version>${contract.version}</version>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>RELEASE</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                    <encoding>UTF-8</encoding>
                    <optimize>false</optimize>
                    <debug>true</debug>
                    <showDeprecation>false</showDeprecation>
                    <showWarnings>false</showWarnings>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.jd.blockchain</groupId>
                <artifactId>contract-maven-plugin</artifactId>
                <version>1.0.3.RELEASE</version>
                <configuration>
                    <cParam>${cParam}</cParam>
                    <sParam>${sParam}</sParam>
                    <oParam>${oParam}</oParam>
                    <cpParam>${cpParam}</cpParam>
                    <eParam>${eParam}</eParam>
                    <host>${host}</host>
                    <port>${port}</port>
                    <ledgerHash>${ledgerHash}</ledgerHash>
                    <ownerPubPath>${ownerPubPath}</ownerPubPath>
                    <ownerPrvPath>${ownerPrvPath}</ownerPrvPath>
                    <ownerPassword>${ownerPassword}</ownerPassword>
                    <chainCodePath>${chainCodePath}</chainCodePath>
                </configuration>
                <executions>
                    <execution>
                        <id>first-execution</id>
                        <goals>
                            <goal>contractCompile</goal>
                        </goals>
                        <phase>compile</phase>
                    </execution>

                    <execution>
                        <id>third-execution</id>
                        <goals>
                            <goal>contractDeploy</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <skip>true</skip>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.5</version>
                <configuration>
                    <!--<includes>-->
                        <!--<include>**/*Test.java</include>-->
                    <!--</includes>-->
                    <skipTests>true</skipTests>
                </configuration>
            </plugin>

        </plugins>
    </build>

</project>